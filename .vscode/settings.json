{
    //--- Common settings amongs all projects
    //--- Common settings Version 1.0.0.1
    //PowerShell main configuration
    "powershell.powerShellExePath": "C:\\Users\\gogbg\\Documents\\WindowsPowerShell\\ps\\6.0.5\\pwsh.exe",
    "powershell.startAutomatically": true,
    "powershell.helpCompletion": "BlockComment",
    "powershell.sideBar.CommandExplorerVisibility": false,
    //PowerShell codeFolding
    "powershell.codeFolding.enable": true,
    "powershell.codeFolding.showLastLine": true,
    //PowerShell integratedConsole
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    //PowerShell codeFormatting
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.openBraceOnSameLine": false,
    "powershell.codeFormatting.ignoreOneLineBlock": false,
    "powershell.codeFormatting.preset": "Allman",
    //PowerShell scriptAnalysis
    "powershell.scriptAnalysis.enable": false,
    //Editor
    "editor.showFoldingControls": "always",
    "editor.foldingStrategy": "indentation",
    "editor.renderWhitespace": "none",
    "editor.formatOnSave": true,
    //Terminal
    "terminal.integrated.shell.windows": "C:\\Users\\gogbg\\Documents\\WindowsPowerShell\\ps\\6.0.5\\pwsh.exe",
    //Telemetry
    "telemetry.enableTelemetry": false,
    //Git
    "git.autofetch": true,
    "terminal.integrated.rendererType": "dom",
    "breadcrumbs.enabled": true,
    //Files
    "files.trimTrailingWhitespace": true,
    "files.defaultLanguage": "powershell",
    "files.trimFinalNewlines": true,
    "files.encoding": "utf8",
    //--- Project specific settings
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    }
}